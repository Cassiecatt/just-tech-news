<div class="comments">
    {{#each this}} {{! we use this when referring to the parent object or array thats avialable in the context of the partial}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>